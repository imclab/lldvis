<%= auto_discovery_link_tag(:rss, "#{url_for(:action => 'index')}.rss") %>


<%= render :partial => "shared/menu_bar"%>

<div id="tabs">
	<ul>
		<li><a href="#tabs-1"><%= @table_title %></a><a href="<%= "#{url_for(:action => params[:action])}.rss" %>"><%= image_tag "icons/feedicon.png" %></a></li>
	</ul>
	<div id="tabs-1">
		<table class="panel-grid">
			<thead>
				<tr>
					<th>Name</th>
					<th>Usecases</th>
					<th class="{sorter: false}">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @vocabs.each do |vocab| %>
				  <tr>
				    <td><%= link_to vocab.name, vocab %></td>
						<td><%= link_to vocab.usecases.size,"#{ActionController::Base.relative_url_root}/vocabs/#{vocab.id}/usecases/" %></td>
				    <td class="panel-grid-operations"><%= link_to 'Edit', edit_vocab_path(vocab) %> | <%= link_to 'Destroy', vocab, :confirm => 'Are you sure?', :method => :delete %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>



<br />

<%= link_to 'New vocab', new_vocab_path %>