<% form_for(@topic) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
		<%= f.collection_select(:topiccluster_id, Topiccluster.all,:id, :name, options ={:prompt => "Select the topic cluster"}) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>